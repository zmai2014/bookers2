# 特定の本の詳細情報
<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'layouts/sidebar', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= link_to book_path(book.id) do %>
                  <%= book.user %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>