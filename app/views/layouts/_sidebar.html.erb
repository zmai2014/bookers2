<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
          <h2>User info</h2>
            <%= image_tag user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <%= user.introduction %>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="btn btn-outline-secoudary btn-block edit_current_user" href="user/edit/{:id}">
